<data>
	<!-- the general game settings -->
	<settings width="25" height="20" startenergy="1000" maxcreeps="10" logo="rechargepoint_01"></settings>
	
	<!-- player start locations -->
	<player x="1" y="1"></player>
	
	<!-- entry points -->
	<start x="1" y="1" id="1"></start>
