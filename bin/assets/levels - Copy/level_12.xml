		<squad creepid="BossOne" startpointid="1" amount="1" spacing="600"></squad>
		<squad creepid="FastMover" startpointid="1" amount="10" spacing="600"></squad>
		<squad creepid="BasicCreep" startpointid="1" amount="13" spacing="100"></squad>

	</wave>		
	<talk charactername="Scientist" text="Hi there young one" side="left"></talk>
	<talk charactername="Player" text="Ehm.. hi" side="right"></talk>
	<talk charactername="Scientist" text="Its go time. Did you bring your board and stones?" side="left"></talk>
