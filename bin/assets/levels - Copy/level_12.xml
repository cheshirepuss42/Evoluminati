	<upgrade id="FreezeGun"></upgrade>
	<upgrade id="Wall"></upgrade>
	<upgrade id="StandardTower"></upgrade>
	<upgrade id="ColdTower"></upgrade>

	
	<!-- the waves that will be set loose on this map, timeout is milliseconds to next wave  -->
	<wave timeout="20000">		
		<!-- the squad that is set loose, startpointid indicates where it spawns, spacing is milliseconds between next creep -->	
		<squad creepid="BigCreep" startpointid="1" amount="5" spacing="10"></squad>
		<squad creepid="BasicCreep" startpointid="1" amount="5" spacing="10"></squad>
	</wave>
	<wave timeout="5000">	
		<squad creepid="FastBigCreep" startpointid="1" amount="2" spacing="100"></squad>
	</wave>
	<wave timeout="5000">	
		<squad creepid="FastMover" startpointid="1" amount="6" spacing="100"></squad>
	</wave>	
	<wave timeout="5000">	
		<squad creepid="FastBigCreep" startpointid="1" amount="3" spacing="100"></squad>
		<squad creepid="BigCreep" startpointid="1" amount="3" spacing="100"></squad>
		<squad creepid="FastBigCreep" startpointid="1" amount="3" spacing="100"></squad>

	</wave>
	<wave timeout="300">	
		<squad creepid="FastMover" startpointid="1" amount="14" spacing="600"></squad>
		<squad creepid="FastMover" startpointid="1" amount="10" spacing="600"></squad>
		<squad creepid="FastMover" startpointid="1" amount="6" spacing="100"></squad>

	</wave>	
	<wave timeout="300">	
		<squad creepid="BigCreep" startpointid="1" amount="14" spacing="600"></squad>
