<?xml version="1.0" encoding="utf-8" ?>
<data>
	<!-- the general game settings -->
	<settings width="25" height="20" startenergy="500" maxcreeps="50" logo="rechargepoint_01"></settings>
	
	<!-- player start locations -->
	<player x="1" y="1"></player>
	
	<!-- entry points -->	
	<start x="1" y="18" id="1"></start>
	<start x="23" y="1" id="2"></start>
	<start x="4" y="5" id="3"></start>
	
	<!-- exit point -->
	<goal x="23" y="18"></goal>
	
	<!-- recharge points -->
	<recharge x="20" y="18"></recharge>
	
	<!-- initial structures / map layout -->
	<structure structureid="Wall" x="2" y="4" w="1" h="15" ></structure>
	<!-- floor traps --->

	<trap type="fire" x="1" y="8"></trap>
	<trap type="fire" x="1" y="9"></trap>
	<trap type="slow" x="1" y="10"></trap>
	
